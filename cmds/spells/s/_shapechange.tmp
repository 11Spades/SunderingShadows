#include <spell.h>
#include <daemons.h>
inherit SPELL;

void create() 
{
    ::create();
    set_spell_name("shapechange");
    set_spell_level(([ "mage" : 9 ]));
    set_spell_sphere("alteration");
    set_syntax("cast CLASS shapechange on balor|fire_giant|iron_golem|red_dragon");
    set_description("With this spell you turn into a giant kittenzilla");
    set_verbal_comp();
    set_somatic_comp();
    set_helpful_spell(1);
}


void spell_effect(int prof) 
{
//just steal stuff from yuan-ti
    
    spell_successful();

    caster->set_property("spelled", ({TO}) );
    caster->set_property("spectral_hand",1);
    addSpellToCaster();
}



void dest_effect() 
{    
    ::dest_effect();
    if(objectp(TO)) TO->remove();
}


