 #include <std.h>
 inherit WIZ;
 void create() {
         ::create();
         set_property("indoors",0);
         set_property("light",2);
         set_terrain(WIZ);
         set_travel(WIZ);
         set_name("air");
         set_short(
 "%^BOLD%^%^CYAN%^Cloudswept Sky%^RESET%^");
         set_long(
 "%^BOLD%^%^CYAN%^The ground seems distant as yousoar amongst the clouds. %^RESET");
         set_smell("default",
 "The crisp air is clean and fresh.");
         set_listen("default",
 "The rushing of air whistles past.");
         set_items(([
 ({"ground","grounds"}) :
 "You see the specks of people.",
 "cloud" : "It looks like a stove.",
   ]));
   set_exits(([
      "north    " : "(sky_x1y2z1        )",
   set_exits(([
      "east     " : "(sky_x2y1z1        )",
   set_exits(([
      "northeast" : "(sky_x2y2z1        )",
         ]));
 }
