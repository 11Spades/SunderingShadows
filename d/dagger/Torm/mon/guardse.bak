  present("chain",TO)->set_property("monsterweapon",1);
  set_overall_ac(5);

}
void heart_beat(){
  int i,j;
  object *att;
  ::heart_beat();
  if(!objectp(TO)) return;
  if((att = (object *)TO->query_attackers()) != ({})){
  j=sizeof(att);
  for(i=0;i<j;i++){
  command("rush "+att[i]->query_name());
  }
  }
}
