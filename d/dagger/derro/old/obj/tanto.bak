#include <std.h>
inherit "/std/weapon";
create(){
  ::create();
  set_id(({"tanto","dagger","knife"}));
  set_name("tanto");
  set_short("tanto");
  set_long(
  "  This is a short curved dagger that ends in a chisel point."
  "  The metal in its blade seems incredibly sharp and it seems to be able to hold a better edge than you would expect."
  );
  set_weight(1);
  set_size(1);
  set("value",1000);
  set_wc(2,4);
  set_large_wc(2,3);
  set_property("enchantment",1);
  set_type("thiefslashing");
  set_wield((:TO,"ouch_me":));
}
int ouch_me(int dam){
  write("As you wield the strange dagger it slips and cuts your fingers badly!");
  say(""+TPQCN+" slips and draws blood while wielding a small sharp knife.",TP);
  ETO->do_damage("torso",roll_dice(2,3));
  return 1;
}
