//little side path, elven ritual plot & permanent addition to retain lore. N, 3/15.
#include <std.h>
inherit "std/pier";

void create() {
    ::create();
    set_terrain(LIGHT_FOREST);
    set_travel(DIRT_ROAD);
    set_property("indoors",0);
    set_property("light",2);
    set_name("A Forest Glade");
    set_short("%^RESET%^%^GREEN%^A Forest Glade%^RESET%^");
    set_long("%^GREEN%^Ancient trees, their leafs ablaze with %^RED%^a%^ORANGE%^u%^MAGENTA%^t%^RED%^um%^MAGENTA%^n%^ORANGE%^a%^RED%^l %^GREEN%^colors, stand guard over this serene glade "
"deep within the Kilkean Forest. %^BOLD%^%^WHITE%^Mist s%^BLACK%^w%^RESET%^ir%^BOLD%^%^BLACK%^l%^WHITE%^s %^RESET%^%^GREEN%^along the borders of the trees, obscuring your view deeper into "
"the thick woods. Green grass and wildflowers grow tall and untamed, nourished by the wide open %^CYAN%^skies %^GREEN%^above. Large %^BOLD%^moss-covered %^RESET%^%^GREEN%^rocks form an "
"incline on the far eastern border of the clearing. A %^CYAN%^spring %^GREEN%^spills from the cracks between the stones, forming a small %^CYAN%^crystalline pool %^GREEN%^at the base of "
"this geological formation.%^RESET%^\n");
    set_smell("default","%^ORANGE%^The cleansing air smells faintly of %^MAGENTA%^w%^RED%^i%^ORANGE%^l%^MAGENTA%^dfl%^RED%^o%^MAGENTA%^w%^RED%^er%^MAGENTA%^s%^ORANGE%^.%^RESET%^");
    set_listen("default","%^CYAN%^The soft trickle of the %^BOLD%^spring %^RESET%^%^CYAN%^is relaxing.%^RESET%^");

    set_exits(([
      "west" : "/d/dagger/road/elfglade/elfglade2",
    ]));

    set_items(([
      "trees" : "%^RESET%^%^GREEN%^The trees tower hundreds of feet above your head.%^RESET%^",
      "mist" : "%^RESET%^%^GREEN%^The white mist clings heavily to the impenetrable branches, obscuring your view into the forest.%^RESET%^",
      ({ "grass","wildflowers","flowers" }) : "%^RESET%^%^GREEN%^The floor of the glade is covered in tall grass and colorful wildflowers that soften your footsteps and give off a wonderful "
"scent.%^RESET%^",
      ({ "spring","rocks","stones","pool" }) : "%^RESET%^%^GREEN%^Pure water rises from deep within the earth and spills over the moss-covered stones. The water gathers in a deep basin at the "
"base of the rocky incline.%^RESET%^",
    ]));

   set_max_fishing(2);
   set_chance(17);
   set_max_catch(3);
   set_fish( ([ "tiny carp": 2 ]) );
}
