#include <std.h>

inherit WEAPON;

void create(){
   ::create();
   set_name("mace of ibrandul");
   set_id(({"mace","mace of ibrandul"}));
   set_obvious_short("A diamond-headed mace");
   set_short("%^RED%^Mace of Ibrandul");
   set_long(
@OLI
   This fine diamond headed mace is the traditional mace
of the followers of Ibrandul. With wicked sharped edges
on the head the mace can prob do great damage.
OLI
   );
   set_wc(1,8);
   set_large_wc(1,8);
   set_hit((:TO,"hitme":));
   set_wield((:TO,"wieldme":));
   set_unwield((:TO,"removeme":));
   set_size(2);
   set_weight(10);
   set_value(2500);
   set_type("bludgeon");
   set_prof_type("religious mace");
   set_prof_level(40);
   set_property("enchantment",4);
}

int hitme(object targ){
   if(!objectp(targ)) return random(5);
   if((string)targ->query_diety() == "shar")
      return random(10);
   return random(5);
}

int wieldme(){
   if(!interactive(TP)) return 1;
   if((int)TP->query_highest_level() < 30) return 0;
   ETO->set_property("evil item",1);
   return 1;
}

int removeme() {
   ETO->set_property("evil item",-1);
   return 1;
}
