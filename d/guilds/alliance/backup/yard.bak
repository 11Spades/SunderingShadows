// /d/guilds/alliance/yard.c

#include <std.h>

inherit ROOM;

void create(){
   ::create();
   set_terrain(VILLAGE);
   set_travel(PAVED_ROAD);
   set_indoors(0);
   set_light(2);
   //set_property("no teleport",1);
   set_property("teleport ward",67);
   set_short("At the castle courtyard");
   set_long("%^CYAN%^Castle Courtyard%^RESET%^\n "+
      "%^BOLD%^%^WHITE%^This is the courtyard of the castle. To the "+
	  "north you see a large oak door that leads into the main building "+
	  "of the castle. To the west you see the stables where the warriors "+
	  "once placed their horses to rest. To the south you see the "+
	  "drawbridge gate that leads out of the castle. The courtyard "+
	  "is enclosed by the castle walls. In the open sky above you a "+
	  "bird floats by.\n");
   set_listen("default","You can hear a single bird screaming in the sky above.");
   set_smell("default","A mixed smell of stable and sweat dominates the air.");
   set_exits(([
      "north":"/d/guilds/alliance/hall/hall",
      "south":"/d/guilds/alliance/hall/gate",
      "west":"/d/guilds/alliance/hall/stable.c",
   ]));
}