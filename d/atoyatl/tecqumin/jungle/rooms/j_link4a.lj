#include <std.h>
#include <terrain.h>
#include "../../tecqumin.h"
inherit J_MAZE;

void create() {
  ::create();
  base_exits = ([ "west": JUNG_ROOM + "j_link4" ]);
  set_basic_exits();
  r_path = JUNG_ROOM5 + "j_maze";
}

void on_enter(){
  object mazeroom1, mazeroom2;
  string *exits;
  mazeroom1 = find_object_or_load(JUNG_ROOM5 + "j_maze0.c");
  if (sizeof(query_exits())<2){
    BUILDER->restore_exits(TO);
  }
  if (sizeof(query_exits())<2){
    mazeroom1->remove_maze();
    set_basic_exits();
    mazeroom1->make_maze();
  }   
}

