	"about 5 feet tall, its skin is a putrid green, and it is garbed in a flowing "+
	"purple robe.  The creatures head resembles a small octopus.  It has two "+
	"bug-eyes and four tentacles protruding from where its mouth should be.  "+
	"Although this beast looks fragile, beware its power."
    );
    set_property("wandermon", 1);
    set_body_type("human");
    set_race("illithid");
    set_gender("neuter");
    set_alignment(9);
    add_limb("tentacle1","head", 0, 0, 0);
    add_limb("tentacle2","head", 0, 0, 0);
    add_limb("tentacle3","head", 0, 0, 0);
    add_limb("tentacle4","head", 0, 0, 0);
    set_size(2);
    set_class("mage");
    set_hd(12+(random(12)),12);
    set_mlevel("mage",query_hd());
    set_hp(108+(random(88)));
    set_guild_level("mage",18);
    set_attack_bonus(1);
    set_property("magic resistance",75);
    set_property("swarm",1);
    set_property("magic",1);
    set_stats("strength",19);
    set_stats("dexterity",18);
    set_exp(18000);
    set_overall_ac(-6);
    set("aggressive",19);
    set_spells(({
	"magic missile",
	"fireball",
	"cone of cold",
	"lightning bolt",
	"vampiric touch",
	"prismatic spray",
	"powerword kill",
	"meteor swarm",
    }));
    ob = new("/realms/tristan/healing");
    ob->move(TO);
    ob->set_uses(50);
    if(random(20) < 5){
	if(TO->query_level() < 15){
	    new("/d/laerad/obj/bracers"+(random(5)+1))->move(TO);
	    } else {
	    new("/d/laerad/obj/bracers"+(random(6)+1))->move(TO);
	}
    command("wear bracers");
    }
    if(!random(500)){
     ob = new("/d/laerad/obj/ring_invis")->move(TO);
//
   ob->move(TO);
   if (!random(50)) ob->set_property("monterweapon");
	command("wear ring");
	command("invisible");
    }
    set_attack_limbs(({"tentacle1","tentacle2","tentacle3","tentacle4"}));
