   object ob;
    ::create();
    set_id(({"illithid","mind flayer","flayer"}));
    set_name("illithid");
    set_property("magic",1);
    set_short("A hideous Illithid");
    set_long(
	"This is a hideous Illithid, or more commonly known as Mind Flayer.  This "+
